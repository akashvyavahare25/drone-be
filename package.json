{
  "name": "nest-mongo-api-starter",
  "version": "1.0.0",
  "description": "Full-featured starter for Typescript Node & Mongo Rest API server featuring NestJS\n",
  "author": "Miroslav Petrik",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --config  ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nest-middlewares/serve-static": "^6.0.0",
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "7.6.17",
    "@nestjs/core": "7.6.17",
    "@nestjs/jwt": "7.2.0",
    "@nestjs/mongoose": "7.2.4",
    "@nestjs/passport": "7.1.5",
    "@nestjs/platform-express": "7.6.17",
    "@nestjs/swagger": "4.8.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "compression": "^1.7.4",
    "csvtojson": "^2.0.10",
    "dotenv": "10.0.0",
    "ejs": "^3.1.6",
    "fast-csv": "^4.3.6",
    "form-data": "^3.0.0",
    "fs-extra": "^10.1.0",
    "helmet": "4.6.0",
    "json2csv": "^5.0.5",
    "lodash": "^4.17.19",
    "moment": "^2.29.1",
    "mongoose": "5.12.13",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^2.3.3",
    "nest": "^0.1.6",
    "nest-morgan": "^1.0.1",
    "nestjs": "^0.0.1",
    "ngrx-store-localstorage": "^9.0.0",
    "node-schedule": "^2.0.0",
    "nodemailer": "^6.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rotating-file-stream": "^1.4.3",
    "rxjs": "6.6.7",
    "ssh2-sftp-client": "^6.0.1",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "7.6.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.6",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.12",
    "@types/helmet": "^0.0.43",
    "@types/jest": "26.0.23",
    "@types/lodash": "^4.14.136",
    "@types/mongoose": "5.11.96",
    "@types/morgan": "^1.7.36",
    "@types/node": "14.17.3",
    "@types/node-fetch": "^2.5.8",
    "@types/nodemailer": "^6.2.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.11",
    "@types/uuid": "^3.4.5",
    "jest": "26.6.3",
    "mongoose-seed-2": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "6.1.3",
    "ts-jest": "26.5.6",
    "ts-node": "10.0.0",
    "tsc-watch": "4.4.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "typescript": "4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
